# Log rotation configuration for quantum-safe cryptography
# Generated by Algo VPN quantum-safe role

/opt/quantum-safe/logs/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    copytruncate
    create 0644 root root
}

/var/log/strongswan*.log {
    daily
    missingok
    rotate 14
    compress
    delaycompress
    notifempty
    copytruncate
    create 0644 root root
    postrotate
        systemctl reload strongswan 2>/dev/null || true
    endscript
}

/opt/quantum-safe/metrics/*.txt {
    daily
    missingok
    rotate 7
    compress
    delaycompress
    notifempty
    create 0644 root root
}
