# strongSwan quantum-safe plugin configuration
# Generated by Algo VPN quantum-safe role

charon {
    plugins {
        # LibOQS plugin for post-quantum algorithms
        oqs {
            load = yes
        }

        # Native ML plugin for post-quantum algorithms (if available)
        # ml {
        #     load = yes
        # }

        # OpenSSL plugin required for hybrid modes
        openssl {
            load = yes
        }

        # Ensure required plugins are loaded
        stroke {
            load = yes
        }

        updown {
            load = yes
        }

        kernel-netlink {
            load = yes
        }
    }

    # Enhanced logging for quantum-safe operations
    loglevel = {{ quantum_safe_logging | default('info') }}

    # Algorithm preferences for quantum-safe connections
    prefer_best = yes

    # Enhanced DH groups for hybrid modes
    dh_exponent_ansi_x9_42 = no
}

# Swanctl configuration for post-quantum support
swanctl {
    load = yes
}
